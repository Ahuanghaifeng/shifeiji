<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.sfj.sfj.widget.CommentCardLayout
            android:id="@+id/card_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.sfj.sfj.widget.CommentCardLayout>

        <com.sfj.sfj.widget.CommentCardLayout
            android:id="@+id/card_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.sfj.sfj.widget.CommentCardLayout>

        <com.sfj.sfj.widget.CommentCardLayout
            android:id="@+id/card_sun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.sfj.sfj.widget.CommentCardLayout>

        <com.sfj.sfj.widget.CommentCardLayout
            android:id="@+id/card_air_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.sfj.sfj.widget.CommentCardLayout>

        <com.sfj.sfj.widget.CommentCardLayout
            android:id="@+id/card_rain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.sfj.sfj.widget.CommentCardLayout>

        <com.sfj.sfj.widget.CommentCardLayout
            android:id="@+id/card_soil_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.sfj.sfj.widget.CommentCardLayout>

        <com.sfj.sfj.widget.CommentCardLayout
            android:id="@+id/card_soil_humidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.sfj.sfj.widget.CommentCardLayout>

        <com.sfj.sfj.widget.CommentCardLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/card_pressure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.sfj.sfj.widget.CommentCardLayout>
    </LinearLayout>
</ScrollView>